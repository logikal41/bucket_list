<h1>Lists</h1>
<p>Find me in app/views/lists/index.html.erb</p>

<%= link_to 'Create new list', new_list_path %>

<% @lists.each do |list| %>
    <h2><%= list.name %></h2>
    <%= link_to 'Show', list %>
    <%= link_to 'Edit', edit_list_path(list) %>
    <%= link_to 'Delete', list, method: :delete %>
<% end %>